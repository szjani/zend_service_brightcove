<h1>FindVideosByIds</h1>
<?php echo $this->form ?>
<?php $i = 1 ?>
<?php if (isset($this->videos)): ?>
<?php foreach ($this->videos as $video): ?>
  <div class="item">
    <h2><?php echo $i++ . '. ' . $video->getName() ?></h2>
    <div class="item_body">
      <dl>
      <?php foreach ($video as $property => $value): ?>
        <dt><?php echo $property ?></dt>
        <dd><?php echo $value ?></dd>
      <?php endforeach ?>
      </dl>
    </div>
  </div>
<?php endforeach ?>
<?php endif ?>